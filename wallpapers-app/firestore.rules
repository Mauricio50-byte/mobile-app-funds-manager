rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /users/{userId} {
      // Permitir lectura y escritura solo si el usuario está autenticado
      // y el documento pertenece al usuario autenticado
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Reglas para la colección de wallpapers
    match /wallpapers/{wallpaperId} {
      // Permitir lectura pública de wallpapers públicos
      allow read: if resource.data.isPublic == true;
      
      // Permitir lectura y escritura si el usuario está autenticado
      // y el wallpaper pertenece al usuario autenticado
      allow read, write: if request.auth != null && 
        request.auth.uid == resource.data.uid;
      
      // Permitir crear wallpapers si el usuario está autenticado
      // y el uid en el documento coincide con el usuario autenticado
      allow create: if request.auth != null && 
        request.auth.uid == request.resource.data.uid;
      
      // Permitir actualizar wallpapers si el usuario está autenticado
      // y es el propietario del wallpaper
      allow update: if request.auth != null && 
        request.auth.uid == resource.data.uid;
      
      // Permitir eliminar wallpapers si el usuario está autenticado
      // y es el propietario del wallpaper
      allow delete: if request.auth != null && 
        request.auth.uid == resource.data.uid;
    }
    
    // Permitir acceso temporal para desarrollo (REMOVER EN PRODUCCIÓN)
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}